<% if @craft.availability %>
	$('#<%= @craft.id %>').html("••• This workshop is still available for booking •••");
	console.log('#<%= @craft.title %> is available for booking.');
<% else %>
	$('#<%= @craft.id %>').html("••• Sorry! This workshop is no longer available for booking •••");
	console.log('#<%= @craft.title %> is no longer available for booking.');
<% end %>




