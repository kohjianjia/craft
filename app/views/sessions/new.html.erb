<div class="container-fluid" style="padding-bottom: 2%; padding-left: 2%; padding-right: 2%;">

	<h2 class="text-center">Sign In</h2>

	<form action="/sign_in" method="post">
		<div style="width: 60%; margin: auto;">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<div class="form-group row mt-4">
				<div class="col-sm-2 col-form-label">
					Username
				</div>
				<div class="col-sm-10">
					<input type="text" name="username" placeholder='Insert your Username' class="form-control">
				</div>
			</div>
			<div class="form-group row mt-4">
				<div class="col-sm-2 col-form-label">
					Password
				</div>
				<div class="col-sm-10">
					<input type="password" name="password" placeholder='Insert Password' class="form-control">
				</div>
			</div>
			<div class="text-center" style="width: 100%">
				<input type="submit" value="Sign In" class="btn-sm btn-outline-dark">
			</div>
			</div>
		</div>
	</form>

</div>




