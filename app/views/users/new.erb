<div class="container-fluid" style="padding-bottom: 2%; padding-left: 2%; padding-right: 2%;">

	<h2 class="text-center">Sign Up</h2>

	<%= form_with scope: @user, url: users_path, local: true do |f| %>
		<div style="width: 60%; margin: auto;">
			<!-- print errors -->
			<% if @user.errors.any? %>
			<h5>
				<%= pluralize(@user.errors.count, "error") %>
				prohibited from creating an account:
			</h5>
			<p>
				<ul>
					<% @user.errors.full_messages.each do |message| %>
						<li>
							<%= message %>
						</li>
					<% end %>
				</ul>
			</p>
			<% end %>
			<!-- end of print errors -->
		</div>

		<form>
			<div style="width: 60%; margin: auto;">
				<div class="form-group row mt-4">
					<%= f.label :username, class:"col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= f.text_field :username, placeholder: 'Insert a Username', :required => true, class:"form-control" %>
					</div>
				</div>

				<div class="form-group row mt-4">
					<%= f.label :email, class:"col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= f.text_field :email, placeholder: 'Insert your Email', :required => true, class:"form-control" %>
					</div>
				</div>

				<div class="form-group row mt-4">
					<%= f.label :password, class:"col-sm-2 col-form-label" %>
					<div class="col-sm-10">
						<%= f.password_field :password, placeholder: 'Create a Password', :required => true, class:"form-control" %>
					</div>
				</div>

				<div class="form-group row mt-4">
					<%= f.label ".Re-enter password", class:"col-sm-2 col-form-label" %>
					<div class="col-sm-10 mt-2">
						<%= f.password_field :password_confirmation, placeholder: 'Confirm Password', :required => true, class:"form-control" %>
					</div>
				</div>

				<div class="mt-2 text-center">
					<%= f.submit 'Create Account', class:"btn-sm btn-outline-dark" %>
				</div>
			</div>
		</form>
	<% end %>

</div>
