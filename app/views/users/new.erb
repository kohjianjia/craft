<h2>Sign Up</h2>

<%= form_with scope: @user, url: users_path, local: true do |f| %>

	<!-- print errors -->
	<% if @user.errors.any? %>
	<h4>
		<%= pluralize(@user.errors.count, "error") %>
		prohibited from creating an account:
	</h4>
	<p>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li>
					<%= message %>
				</li>
			<% end %>
		</ul>
	</p>
	<% end %>
	<!-- end of print errors -->

	<h3>
		Username: 
		<%= f.text_field :username, placeholder: 'Input a Username' %>
	</h3>

	<h3>
		Email:
		<%= f.text_field :email, placeholder: 'Input your Email' %>
	</h3>

	<h3>
		Password:
		<%= f.password_field :password, placeholder: 'Create a Password' %>
	</h3>

	<h3>
		Re-enter password:
		<%= f.password_field :password_confirmation, placeholder: 'Confirm Password' %>
	</h3>

	<%= f.submit 'Create Account' %>

<% end %>
