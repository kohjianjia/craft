<!DOCTYPE html>
<html>
  <head>
    <title>Assessment</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar sticky-top navbar-expand-lg navbar-light" style="background-color: #fff; padding:1.5%; border-bottom: #f9f9f9;">
      <div class="container">
        <% if current_user %>
          <a class="navbar-brand" href="/homepage"><strong>CRAFTER</strong></a>
        <% else %>
          <a class="navbar-brand" href="/">CRAFTER</a>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="fa fa-heart-o"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto"> 
            <% if current_user %>
              <li class="nav-item">
                <a class="nav-link" href="/users/<%= current_user.id %>">Profile</a>
              </li>
              <% if current_user.admin? %>
                <li class="nav-item">
                  <a class="nav-link" href="/users">All Users</a>
                </li>
              <% end %> 
              <li class="nav-item">
                <a class="nav-link" href="/crafts/new">Host a Workshop!</a>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign Out', session_path('id'), method: :delete, class:"nav-link" %>
              </li>
            <% else %>
              <% if request.path_info == '/sign_in' %>
                <li class="nav-item">
                  <%= link_to 'Sign Up', sign_up_path, class:"nav-link" %>
                </li>
              <% elsif request.path_info == '/sign_up' %>
                <li class="nav-item">
                  <%= link_to 'Sign In', sign_in_path, class:"nav-link" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Sign Up', sign_up_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Sign In', sign_in_path, class:"nav-link" %>
                </li>
              <% end %>
            <% end %>
            <!-- <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Dropdown
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="#">Action</a>
                <a class="dropdown-item" href="#">Another action</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Something else here</a>
              </div>
            </li>  -->
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" style="height: 32px;" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-secondary my-2 my-sm-0 fa fa-search" type="submit"></button>
          </form>
        </div>
      </div>
    </nav>
    
    <%= yield %>
  </body>
</html>
